<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DialogFragmentExample" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="DialogFragmentsTextView" >
        <item name="android:textColor">#0A5170</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="numberTextView" >
        <item name="android:textColor">#0A5170</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="Theme.DialogFragmentExample" parent="Base.Theme.DialogFragmentExample" />
</resources>